#include <bits/stdc++.h>

using namespace std;

class DoublyList {
    struct Node {
        int info;
        Node *next;
        Node *prev;
    };
    Node *head;
    Node *tail;
    int length;
public:
    DoublyList() {
        head = tail = NULL;
        length = 0;
    }

    bool IsEmpty() {
        return length == 0;
    }

    void insertFirst(int data) {
        Node *p = new Node;
        p->info = data;
        p->next = head;
        if (IsEmpty()) {
            head = tail = p;
            p->next = p->prev = NULL;
        } else {
            p->next = head;
            head->prev = p;
            p->prev = NULL;
            head = p;
        }
        length++;
    }

    void insertLast(int data) {
        Node *p = new Node;
        p->info = data;
        if (IsEmpty()) {
            head = tail = p;
            p->next = p->prev = NULL;
        } else {
            tail->next = p;
            p->prev = tail;
            p->next = NULL;
            tail = p;
        }
        length++;
    }

    void insertAtPos(int pos, int data) {
        if (pos < 0 or pos > length) {
            cout << "Out of Range.";
        } else {
            Node *p = new Node;
            p->info = data;
            if (pos == 0) {
                insertFirst(data);
            } else if (pos == length) {
                insertLast(data);
            } else {
                Node *q = head;
                for (int i = 1; i < pos; i++) {
                    q = q->next;
                }
                p->next = q->next;
                p->next->prev = p;
                p->prev = q;
                q->next = p;
                length++;
            }
        }
    }

    void printList() {
        Node *p = head;
        while (p != NULL) {
            cout << p->info << " ";
            p = p->next;
        }
        cout << '\n';
    }

    int countList() {
        int count = 0;
        Node *p = head;
        while (p != NULL) {
            count++;
            p = p->next;
        }
        cout << "Number of Nodes in List is : ";
        return count;
    }

    void removeFirst() {
        Node *p = head;
        if (IsEmpty()) {
            cout << "Empty List.";
        } else if (length == 1) {
            delete head;
            head = tail = NULL;
        } else {
            Node *p = head;
            head = head->next;
            head->prev = NULL;
            delete p;
        }
        length--;
    }

    void removeLast() {
        if (IsEmpty()) {
            cout << "Empty List";
        } else if (length == 1) {
            delete head;
            head = tail = NULL;
        } else {
            Node *p = tail;
            tail = tail->prev;
            tail->next = NULL;
            delete p;
        }
        length--;
    }

    void removeAtPos(int pos) {
        if (pos < 0 or pos > length) {
            cout << "Out of Range.";
        } else {
            if (pos == 0) {
                removeFirst();
            } else if (pos == length) {
                removeLast();
            } else {
                Node *p = head->next, *q = head;
                for (int i = 1; i < pos; i++) {
                    q = p;
                    p = p->next;
                }
                q->next = p->next;
                delete p;
                q->next->prev = q;
                length--;
            }
        }
    }

    int findNode(int data) {
        Node *p = head;
        int pos = 0;
        while (p != NULL and p->info != data) {
            pos++;
            p = p->next;
        }
        if (p == NULL and p->info != data) return cout << "Searched Node: Not Found ", data;
        else cout << "Searched Node " << data << " is in position: ";
        return pos;
    }

    void sortList() {
        Node *p = head;
        int i = 0, arr[length];
        while (p != NULL) {
            arr[i++] = p->info;
            p = p->next;
        }

        sort(arr, arr + length);

        i = 0, p = head;
        while (p != NULL) {
            p->info = arr[i++];
            p = p->next;
        }

        cout << "List after Sorting :";
        i = 0, p = head;
        while (p != NULL) {
            cout << p->info << " ";
            p = p->next;
        }
        cout << '\n';
    }

    void reverseList() {
        Node *p = head;
        int i = 0, arr[length];
        while (p != NULL) {
            arr[i++] = p->info;
            p = p->next;
        }

        reverse(arr, arr + length);

        i = 0, p = head;
        while (p != NULL) {
            p->info = arr[i++];
            p = p->next;
        }

        cout << "List after Reversing :";
        i = 0, p = head;
        while (p != NULL) {
            cout << p->info << " ";
            p = p->next;
        }
        cout << '\n';
    }

    void Get_Min_Max() {
        Node *p = head;
        int Min = INT_MAX, Max = INT_MIN;
        while (p != NULL) {
            Min = min(p->info, Min);
            Max = max(p->info, Max);
            p = p->next;
        }
        cout << "Minimum number is: " << Min << '\n';
        cout << "Maximum number is: " << Max << '\n';
    }

    void Sum_Odd_Even() {
        Node *p = head;
        int sum1 = 0, sum2 = 0;
        while (p != NULL) {
            if (p->info % 2) sum1 += p->info;
            if (!(p->info % 2)) sum2 += p->info;
            p = p->next;
        }
        cout << "Sum of odd numbers is: " << sum1 << '\n'
             << "Sum of even numbers is: " << sum2 << '\n';
    }

    void Increase_by(int n) {
        Node *p = head;
        while (p != NULL) {
            p->info += n;
            p = p->next;
        }

        cout << "List after increasing " << n << " to all Nodes: ";
        p = head;
        while (p != NULL) {
            cout << p->info << " ";
            p = p->next;
        }
        cout << '\n';
    }

    void print_Odd_Even() {
        Node *p = head;
        vector<int> vec1, vec2;
        while (p != NULL) {
            if (p->info % 2) vec1.push_back(p->info);
            if (!(p->info % 2)) vec2.push_back(p->info);
            p = p->next;
        }

        cout << "Odd Numbers are: ";
        for (auto &i:vec1) cout << i << " ";
        cout << '\n';
        cout << "Even Numbers are: ";
        for (auto &i:vec2) cout << i << " ";
        cout << '\n';
    }

    void Update(int ov, int nv) {
        Node *p = head;
        while (p != NULL and p->info != ov) {
            p = p->next;
        }
        if (p->info == ov) p->info = nv;

        cout << "List after updating: ";
        p = head;
        while (p != NULL) {
            cout << p->info << " ";
            p = p->next;
        }
        cout << '\n';
    }
};

int main() {
    DoublyList l;
    l.insertFirst(10);
    l.insertLast(30);
    l.insertAtPos(1, 15);
    l.insertLast(40);
    l.printList();
    l.Update(30, 35);
    l.print_Odd_Even();
    l.Sum_Odd_Even();
    l.Get_Min_Max();
    l.reverseList();
    l.sortList();
    cout << l.findNode(30) << '\n';
    cout << l.countList() << '\n';
    l.removeAtPos(1);
    l.printList();
    l.removeFirst();
    l.printList();
    l.removeLast();
    l.printList();


    return 0;
}
